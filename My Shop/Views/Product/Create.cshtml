@model Models.ViewModel.CreateProductViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
   input{
       direction:rtl;
   }
    .img_Prive {
        width: 30%;
        height: auto;
        margin: 1%;
        float: left;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <center>
            <h2>اضافه کردن محصول</h2>
        </center>
    </div>
</div>
<!-- /. ROW  -->
<hr />
@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    <div class="col-md-6 pull-left">
        <div class="col-lg-12">
            <div class="col-md-12">
                <h4 class="pull-right">عکس محصول</h4>
                <input type="file" id="files" name="files" oninput="preview_image(this)" class="form-control" multiple/>
            </div>
        </div>

        <div class=" clearfix" style="padding:5px;"></div>
        <script>
            function preview_image(me) {
                document.getElementById("div-img").innerHTML = ""
                var fileList = me.files;
                for (var i = 0; i < fileList.length; i++) {
                    //get a blob
                    var t = window.URL || window.webkitURL;
                    var objectUrl = t.createObjectURL(fileList[i]);
                    $('#div-img').append('<img src="' + objectUrl + '" class="img_Prive" " />');

                }

            };
        </script>
        <div class="col-lg-12" id="div-img">
        </div>
    </div>
    <div class="col-md-6 pull-right">
        <div class="col-md-12 ">
            <h4 class="pull-right">برچسب</h4>
            @Html.TextBoxFor(Model => Model.product.Caption, new { @class = "form-control" })
        </div>

        <div class=" clearfix" style="margin:5px;"></div>
        <div class="col-md-12">
            <h4 class="pull-right">قیمت</h4>
            @Html.TextBoxFor(Model => Model.product.Price, new { @class = "form-control" })
        </div>

        <div class=" clearfix" style="margin:5px;"></div>
        <div class="col-md-12">
            <h4 class="pull-right">دسته بندی</h4>
            @Html.Partial("~/Views/Group/_GroupList.cshtml", Model.groups, new ViewDataDictionary { { "id", "product_groupId" }, { "name", "product.groupId" } })
        </div>

        <div class=" clearfix" style="margin:5px;"></div>
        <div class="col-md-12">
            <h4 class="pull-right">تخفیف</h4>
            @Html.TextBoxFor(Model => Model.product.Discount, new { @class = "form-control" })
        </div>

        <div class=" clearfix" style="margin:20px;"></div>
        <div class="col-md-12">
            <button class="btn btn-success">ثبت محصول</button>
        </div>

    </div>
}
@section scripts{
}