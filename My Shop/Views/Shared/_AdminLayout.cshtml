<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.title</title>
    <!-- BOOTSTRAP STYLES-->
    <link Href="~/Content/bs-simple-admin/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link Href="~/Content/bs-simple-admin/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link Href="~/Content/bs-simple-admin/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    @RenderSection("styles",false)
</head>
<body>



    <div id="wrapper">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="adjust-nav">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" Href="~/Content/bs-simple-admin/#">
                        <img src="" /> @*Logo*@
                    </a>
                </div>

                <span class="logout-spn">
                    <a Href="~/Content/bs-simple-admin/#" style="color:#fff;">LOGOUT</a>
                </span>
            </div>
        </div>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">

                    <li class="active-link">
                        <a Href="@Url.Action("Index","Home")"><i class="fa fa-home "></i>صفحه اصلی سایت</a>
                    </li>
                    <li>
                        <a Href="@Url.Action("Admin","Home")"><i class="fa fa-desktop "></i>داشبورد</a>
                    </li>

                    <li>
                        <a Href="#"><i class="fa fa-picture-o "></i>UI Elements</a>
                    </li>
                    <li>
                        <a Href="#"><i class="fa fa-magic "></i> Setting </a>
                    </li>

                    <li>
                        <a Href="#"><i class="fa fa-qrcode "></i>My Link One</a>
                    </li>
                    <li>
                        <a Href="#"><i class="fa fa-bar-chart-o"></i>My Link Two</a>
                    </li>

                </ul>
            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                @RenderBody()
            </div>
            <!-- /. PAGE WRAPPER  -->
        </div>
        <div class="footer">


            <div class="row">
                <div class="col-lg-12">
                    <center>
                        my shop
                    </center>
                </div>
            </div>
        </div>

        <!-- /. WRAPPER  -->
        <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
        <!-- JQUERY SCRIPTS -->
        <script src="~/Content/bs-simple-admin/assets/js/jquery-1.10.2.js"></script>
        <!-- BOOTSTRAP SCRIPTS -->
        <script src="~/Content/bs-simple-admin/assets/js/bootstrap.min.js"></script>
        <!-- CUSTOM SCRIPTS -->
        <script src="~/Content/bs-simple-admin/assets/js/custom.js"></script>

        @RenderSection("scripts", false)

</body>
</html>
