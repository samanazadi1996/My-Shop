<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">

    <link rel="shortcut icon" href="~/Areas/Admin/Content/Mr-Admin/assets/images/favicon.ico">

    <title>@ViewBag.title</title>
    <!-- App CSS -->
    <link href="~/Areas/Admin/Content/Mr-Admin/assets/css/bootstrap-rtl.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/Admin/Content/Mr-Admin/assets/css/core.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/Admin/Content/Mr-Admin/assets/css/components.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/Admin/Content/Mr-Admin/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/Admin/Content/Mr-Admin/assets/css/pages.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/Admin/Content/Mr-Admin/assets/css/menu.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/Admin/Content/Mr-Admin/assets/css/responsive.css" rel="stylesheet" type="text/css" />
    <script src="~/Areas/Admin/Content/Mr-Admin/assets/js/modernizr.min.js"></script>
    @RenderSection("styles", false)
</head>


<body class="fixed-left">

    <!-- Begin page -->
    <div id="wrapper">

        <!-- Top Bar Start -->
        <div class="topbar">

            <!-- LOGO -->
            <div class="topbar-left">
                <a href="@Url.Action("Index","home")" class="logo"><span>فروش<span>گاه من</span></span><i class="zmdi zmdi-layers"></i></a>
            </div>

            <!-- Button mobile view to collapse sidebar menu -->
            <div class="navbar navbar-default" role="navigation">
                <div class="container">

                    <!-- Page title -->
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            <button class="button-menu-mobile open-left">
                                <i class="zmdi zmdi-menu"></i>
                            </button>
                        </li>
                        <li>
                            <h4 class="page-title">@ViewBag.title</h4>
                        </li>
                    </ul>

                    <!-- Right(Notification and Searchbox -->
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <!-- Notification -->
                            <div class="notification-box">
                                <ul class="list-inline m-b-0">
                                    <li>
                                        <a href="javascript:void(0);" class="right-bar-toggle">
                                            <i class="zmdi zmdi-notifications-none"></i>
                                        </a>
                                        <div class="noti-dot">
                                            <span class="dot"></span>
                                            <span class="pulse"></span>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <!-- End Notification bar -->
                        </li>
                        <li class="hidden-xs">
                            <form role="search" class="app-search">
                                <input type="text" placeholder="به دنبال چه می گردی ؟؟؟"
                                       class="form-control">
                                <a href="~/Areas/Admin/Content/Mr-Admin/"><i class="fa fa-search"></i></a>
                            </form>
                        </li>
                    </ul>

                </div><!-- end container -->
            </div><!-- end navbar -->
        </div>
        <!-- Top Bar End -->
        <!-- ========== Left Sidebar Start ========== -->
        <div class="left side-menu">
            <div class="sidebar-inner slimscrollleft">

                <!-- User -->
                <div class="user-box">
                    <div class="user-img">
                        <img src="~/Areas/Admin/Content/Mr-Admin/assets/images/users/avatar-1.jpg" alt="user-img" title="Mat Helme" class="img-circle img-thumbnail img-responsive">
                        <div class="user-status offline"><i class="zmdi zmdi-dot-circle"></i></div>
                    </div>
                    <h5><a href="~/Areas/Admin/Content/Mr-Admin/#">@User.Identity.Name</a> </h5>
                    <ul class="list-inline">
                        <li>
                            <a href="~/Areas/Admin/Content/Mr-Admin/#">
                                <i class="zmdi zmdi-settings"></i>
                            </a>
                        </li>

                        <li>
                            <a href="~/Areas/Admin/Content/Mr-Admin/#" class="text-custom">
                                <i class="zmdi zmdi-power"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- End User -->
                <!--- Sidemenu -->
                <div id="sidebar-menu">
                    <ul>
                        <li class="text-muted menu-title">دسته بندی ها</li>

                        <li>
                            <a href="@Url.Action("Index","Home")" class="waves-effect"><i class="zmdi zmdi-view-dashboard"></i> <span> داشبورد </span> </a>
                        </li>
                        <li class="has_sub">
                            <a href="javascript:void(0);" class="waves-effect"><i class="zmdi zmdi-invert-colors"></i> <span> مدیریت </span> <span class="menu-arrow"></span></a>
                            <ul class="list-unstyled">
                                <li><a href="@Url.Action("Index","Group")">مدیریت گروه ها</a></li>
                                <li><a href="@Url.Action("Index","Brand")">مدیریت برند ها</a></li>
                                <li><a href="@Url.Action("Index","ProductCategory")">مدیریت برگه ها</a></li>
                                <li><a href="@Url.Action("Create","Product")">اضافه کردن محصول</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="@Url.Action("Banner","Value")" class="waves-effect"><i class="zmdi zmdi-view-dashboard"></i> <span> مدیریت بنر ها </span> </a>
                        </li>

                    </ul>
                    <div class="clearfix"></div>
                </div>
                <!-- Sidebar -->
                <div class="clearfix"></div>

            </div>

        </div>
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container">

                    <div class="row">
                        @RenderBody()
                    </div>
                    <!-- End row -->

                </div> <!-- container -->

            </div> <!-- content -->

            <footer class="footer">
                آقای ادمین2016 ©.
            </footer>

        </div>
        <!-- End content-page -->
        <!-- ============================================================== -->
        <!-- End Right content here -->
        <!-- ============================================================== -->
        <!-- Right Sidebar -->
        <div class="side-bar right-bar">
            <a href="javascript:void(0);" class="right-bar-toggle">
                <i class="zmdi zmdi-close-circle-o"></i>
            </a>
            <h4 class="">اعلانات</h4>
            <div class="notification-list nicescroll">
                <ul class="list-group list-no-border user-list">
                    <li class="list-group-item">
                        <a href="~/Areas/Admin/Content/Mr-Admin/#" class="user-list-item">
                            <div class="avatar">
                                <img src="~/Areas/Admin/Content/Mr-Admin/assets/images/users/avatar-2.jpg" alt="">
                            </div>
                            <div class="user-desc">
                                <span class="name">کاربر شماره یک</span>
                                <span class="desc">متن کاربر شماره یک</span>
                                <span class="time">2 ساعت قبل</span>
                            </div>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="~/Areas/Admin/Content/Mr-Admin/#" class="user-list-item">
                            <div class="icon bg-info">
                                <i class="zmdi zmdi-account"></i>
                            </div>
                            <div class="user-desc">
                                <span class="name">ثبت نام جدید</span>
                                <span class="desc">کاربری جدید در سایت ثبت نام کرده است</span>
                                <span class="time">5 ساعت قبل</span>
                            </div>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="~/Areas/Admin/Content/Mr-Admin/#" class="user-list-item">
                            <div class="icon bg-pink">
                                <i class="zmdi zmdi-comment"></i>
                            </div>
                            <div class="user-desc">
                                <span class="name">پیام جدید</span>
                                <span class="desc">متن پیام جدید از کاریی جدید</span>
                                <span class="time">1 روز قبل</span>
                            </div>
                        </a>
                    </li>
                    <li class="list-group-item active">
                        <a href="~/Areas/Admin/Content/Mr-Admin/#" class="user-list-item">
                            <div class="avatar">
                                <img src="~/Areas/Admin/Content/Mr-Admin/assets/images/users/avatar-3.jpg" alt="">
                            </div>
                            <div class="user-desc">
                                <span class="name">کاربر شماره 2</span>
                                <span class="desc">با سلام من یک متن کاملا آزمایشی هستم</span>
                                <span class="time">2 روز قبل</span>
                            </div>
                        </a>
                    </li>
                    <li class="list-group-item active">
                        <a href="~/Areas/Admin/Content/Mr-Admin/#" class="user-list-item">
                            <div class="icon bg-warning">
                                <i class="zmdi zmdi-settings"></i>
                            </div>
                            <div class="user-desc">
                                <span class="name">تنظیمات</span>
                                <span class="desc">تنظیمات جدید برای دسترسی و راحتی شما موجود است</span>
                                <span class="time">1 روز قبل</span>
                            </div>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
        <!-- /Right-bar -->

    </div>
    <!-- END wrapper -->



    <script>
            var resizefunc = [];
    </script>

    <!-- jQuery  -->
    <script src="~/Areas/Admin/Content/Mr-Admin/assets/js/jquery.min.js"></script>
    <script src="~/Areas/Admin/Content/Mr-Admin/assets/js/bootstrap-rtl.min.js"></script>
    <script src="~/Areas/Admin/Content/Mr-Admin/assets/js/detect.js"></script>
    <script src="~/Areas/Admin/Content/Mr-Admin/assets/js/fastclick.js"></script>
    <script src="~/Areas/Admin/Content/Mr-Admin/assets/js/jquery.slimscroll.js"></script>
    <script src="~/Areas/Admin/Content/Mr-Admin/assets/js/jquery.blockUI.js"></script>
    <script src="~/Areas/Admin/Content/Mr-Admin/assets/js/waves.js"></script>
    <script src="~/Areas/Admin/Content/Mr-Admin/assets/js/jquery.nicescroll.js"></script>
    <script src="~/Areas/Admin/Content/Mr-Admin/assets/js/jquery.scrollTo.min.js"></script>

    <!-- App js -->
    <script src="~/Areas/Admin/Content/Mr-Admin/assets/js/jquery.core.js"></script>
    <script src="~/Areas/Admin/Content/Mr-Admin/assets/js/jquery.app.js"></script>
    @RenderSection("scripts", false)
</body>
</html>